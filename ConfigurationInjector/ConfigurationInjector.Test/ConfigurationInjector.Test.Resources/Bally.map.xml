<?xml version="1.0" ?>
<mappings>

  <!--Logging Listeners-->
  <map key="bally.sgpServiceLogListener.fileName">
    <to>/configuration/loggingConfiguration/listeners/add[@name='SGP Service Log File Trace Listener']/@fileName</to>
  </map>
  <!--#####################################-->

  <!--Logging Categories-->
  <map key="bally.dbProfiler.categorySource">
    <to>/configuration/loggingConfiguration/categorySources/add[@name='DbProfiler']/@switchValue</to>
  </map>
  <map key="bally.sysProfiler.categorySource">
    <to>/configuration/loggingConfiguration/categorySources/add[@name='SysProfiler']/@switchValue</to>
  </map>
  <map key="bally.rgsXT.categorySource">
    <to>/configuration/loggingConfiguration/categorySources/add[@name='RgsXT']/@switchValue</to>
  </map>
  <!--#####################################-->

  <!--Logging Special Events-->
  <map key="bally.allEventsLog.specialSource">
    <to>/configuration/loggingConfiguration/specialSources/allEvents/@switchValue</to>
  </map>
  <map key="bally.notProcessedLog.specialSource">
    <to>/configuration/loggingConfiguration/specialSources/notProcessed/@switchValue</to>
  </map>
  <map key="bally.errorsLog.specialSource">
    <to>/configuration/loggingConfiguration/specialSources/errors/@switchValue</to>
  </map>
  <!--#####################################-->

  <!--Endpoint behaviors-->
  <map key="bally.webXmlOverHttpEndpointBehavior.helpEnabled">
    <to>/configuration/system.serviceModel/behaviors/endpointBehaviors/behavior[@name='webXmlOverHttpBehavior']/webHttp/@helpEnabled</to>
  </map>
  <map key="bally.webJsonOverHttpEndpointBehaviour.helpEnabled">
    <to>/configuration/system.serviceModel/behaviors/endpointBehaviors/behavior[@name='webJsonOverHttpBehavior']/webHttp/@helpEnabled</to>
  </map>
  <map key="bally.netNamedPipeEndpointBehaviour.integrationToken">
    <to>/configuration/system.serviceModel/behaviors/endpointBehaviors/behavior[@name='netNamedPipeBehaviour']/gameRTNamedPipeBehavior/@integrationToken</to>
  </map>
  <map key="bally.gameRTJsonEndpointBehaviour.helpEnabled">
    <to>/configuration/system.serviceModel/behaviors/endpointBehaviors/behavior[@name='gamingContractJsonBehavior']/webHttp/@helpEnabled</to>
  </map>
  <!--#####################################-->

  <!--Service behaviors-->
  <map key="bally.standardServiceBehaviour.includeExceptionDetailInFaults">
    <to>/configuration/system.serviceModel/behaviors/serviceBehaviors/behavior[@name='standardServiceBehaviour']/serviceDebug/@includeExceptionDetailInFaults</to>
  </map>
  <map key="bally.standardServiceBehaviour.httpHelpPageEnabled">
    <to>/configuration/system.serviceModel/behaviors/serviceBehaviors/behavior[@name='standardServiceBehaviour']/serviceDebug/@httpHelpPageEnabled</to>
  </map>
  <!--#####################################-->

  <!--Client Endpoints-->
  <map key="environment.gameRT.clientEndpointAddress">
    <to>/configuration/system.serviceModel/client/endpoint[@name='Gaming']/@address</to>
  </map>
  <!--#####################################-->

  <!--Service Endpoints-->
  <map key="environment.ballyPlayer.serviceEndpointAddress">
    <to>/configuration/system.serviceModel/services/service/endpoint[@name='Player']/@address</to>
  </map>
  <map key="environment.ballySystem.serviceEndpointAddress">
    <to>/configuration/system.serviceModel/services/service/endpoint[@name='System']/@address</to>
  </map>
  <map key="environment.ballyGaming.serviceEndpointAddress">
    <to>/configuration/system.serviceModel/services/service/endpoint[@name='Gaming']/@address</to>
  </map>
  <!--#####################################-->

  <!--App settings-->
  <map key="environment.name">
    <to>/configuration/appSettings/add[@key='app.environment']/@value</to>
  </map>
  <map key="bally.operator">
    <to>/configuration/appSettings/add[@key='bally.operator']/@value</to>
  </map>
  <map key="bally.version">
    <to>/configuration/appSettings/add[@key='bally.version']/@value</to>
  </map>
  <map key="bally.status">
    <to>/configuration/appSettings/add[@key='bally.status']/@value</to>
  </map>
  <!--#####################################-->
 
</mappings>